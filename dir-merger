# options for the rsync command
rsync_options=(
    --times
    --human-readable
    --recursive
    --owner
    --group
    --perms
    --partial
    --hard-links
    --acls
    --xattrs
    --executability
    --copy-links
    --numeric-ids
)

usage() {
    printf "%s\n\n" "$1" "    Usage: dir-merger <Source> <Destination>"
    exit 1
}

process_file() {
    if [ -e "$dest_root/$work_path$target" ]; then
        printf "move file %s to %s\n" "$src_root/$work_path$target" "$dest_root/$work_path$target"
    else
        rsync ${rsync_options[@]} "$src_root/$work_path$target" "$dest_root/$work_path$target" 2>/dev/null
        src_hash="$(sha512sum "$src_root/$work_path$target" | awk -e '{printf $1}' )"
        dest_hash="$(sha512sum "$dest_root/$work_path$target" | awk -e '{printf $1}' )"
        if [ "$src_hash" == "$dest_hash" ]; then
            rm -f "$src_root/$work_path$target"
            printf "Moved file %s\n" "$src_root/$work_path$target"
        else
            printf "ERROR: move of file %s to %s failed.\n" "$src_root/$work_path$target" "$dest_root/$work_path$target"
            exit 1
        fi
    fi
}

process_dir() {
    for target in *; do
        if [ ! -L "$target" ]; then
            [ -f "$target" ] && process_file
            [ -d "$target" ] && dir_list+=("$work_path$target")
        fi
    done
}

[ -z "$1" ] && usage "    No Source Directory given."
[ -d "$1" ] || usage "    Source Directory not found."
src_root="$(realpath "$1")"
[ -z "$2" ] && usage "    No Destination Directory given."
[ -d "$2" ] || usage "    Destination Directory not found."
dest_root="$(realpath "$2")"

printf "Merging contents of %s into %s\n" "$src_root" "$dest_root"

#GLOBIGNORE=".|.."
file_list=()
dir_list=()
pushd "$src_root" >/dev/null
work_path=""
cd "${src_root}/"
process_dir
while [ 0 -ne ${#dir_list[@]} ] ; do
    work_path="${dir_list[0]}/"
    dir_list=("${dir_list[@]: 1}")
    cd "${src_root}/${work_path}"
    mkdir -p "${dest_root}/${work_path}"
    process_dir
done


popd >/dev/null

# printf "%s\n" "==FILES==" ${file_list[@]} "===DIRECTORIES===" ${dir_list[@]}
while [ 0 -ne ${#dir_list[@]} ] ; do
    printf "DIR: %s\n" "${dir_list[0]}"
    dir_list=("${dir_list[@]: 1}")
done

